<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackGround_screen_menu"
    tools:context=".Controller.Controller_qa_panic_button">

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BackGround_toolbar"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/style_toolbar"
            android:orientation="horizontal">



            <RelativeLayout
                android:id="@+id/Menu_activityQaMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/menu"
                    app:tint="@color/textColor_WithoutBg"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginEnd="60dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/textColor_WithoutBg"
                android:textSize="20dp"
                android:text="@string/option_panicbuttom" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp"
        tools:layout_editor_absoluteY="106dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <View
                android:layout_width="250dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:outlineAmbientShadowColor="@color/textColor_WithoutBg"
                android:background="@drawable/separator"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="S  O  S"
                android:textSize="50dp" />


            <RelativeLayout
                android:id="@+id/imageButton2"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                app:cardElevation="200dp"
                android:clickable="true"
                android:background="@drawable/background_buttonsos_ripple"
                android:layout_margin="10dp">


                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/buttonAnimation_LottieAnimation_ActivityQaMainMenu"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="true"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    app:lottie_rawRes="@raw/press_buttonsos"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="30dp"
                    android:text="PanikaSOS"
                    android:textColor="@color/textColor_WithoutBg"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:background="@drawable/style_atension"
                android:text="ATENCIÓN" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/textColor_WithoutBg"
                android:text="Usar únicamente en caso de emergencia"
                android:textSize="20dp" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
