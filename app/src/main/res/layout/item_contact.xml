<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item_contact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/BackGround_screen_appdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="25dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:src="@drawable/user_contact"
                        app:tint="@color/textColor_WithoutBg"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingHorizontal="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nickName_itemContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Apodo"
                            android:fontFamily="sans-serif-black"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/firstName_itemContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:text="Nombre"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/lastName_itemContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Apellido"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/email_itemContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="12sp" />
                        <TextView
                            android:id="@+id/phoneNumber_itemContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No. Telefonico"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/editButtom_itemContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/icon_edit_user"
                                app:tint="@color/textColor_WithoutBg"/>
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/deleteButtom_itemContact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:clickable="true"
                            android:background="?attr/selectableItemBackgroundBorderless">
                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/icon_delete"
                                app:tint="@color/textColor_WithoutBg"/>
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>