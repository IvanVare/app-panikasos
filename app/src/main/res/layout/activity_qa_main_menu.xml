<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BackGround_screen_menu"
    tools:context=".Controller.Controller_qa_main_menu">

    <androidx.cardview.widget.CardView
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BackGround_toolbar"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/style_toolbar"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/FullNameUser_TextView_activityQaMainMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:textColor="@color/textColor_WithoutBg"
                android:textSize="25dp"
                android:layout_marginVertical="20dp"
                android:textStyle="bold"
                android:text="Hola," />

            <RelativeLayout
                android:id="@+id/imageButton_LogOut_ActivityQaMainMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:clickable="true"
                android:background="?attr/selectableItemBackgroundBorderless">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_logout"
                    app:tint="@color/textColor_WithoutBg"/>
            </RelativeLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginBottom="80dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/buttomPanika_RelativeLayout_ActivityQaMainMenu"
                    android:layout_width="350dp"
                    android:layout_height="350dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:background="@drawable/background_buttonsos_ripple"
                    android:layout_margin="5dp">


                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/buttonAnimation_LottieAnimation_ActivityQaMainMenu"
                        android:layout_width="380dp"
                        android:layout_height="380dp"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="true"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        app:lottie_rawRes="@raw/press_buttonsos"/>

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="30dp"
                        android:text="Panika SOS"
                        android:textColor="@color/textColor_WithoutBg"
                        android:textStyle="bold"/>
                </RelativeLayout>

            </LinearLayout>
            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/style_btnmainmenu_contact">

                        <RelativeLayout
                            android:id="@+id/ToContacts_button_activityQaMainMenu"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:background="@drawable/background_button_contact_ripple">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:textColor="@color/textColor_WithoutBg"
                                android:text="@string/option_contacts" />

                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/style_btnmainmenu_map">

                        <RelativeLayout
                            android:id="@+id/ToMap_button_activityqa_MainMenu"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:background="@drawable/background_button_map_ripple">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:textStyle="bold"
                                android:textSize="20dp"
                                android:textColor="@color/textColor_WithoutBg"
                                android:text="@string/option_map"  />

                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_ActivityQaMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:thumb="@drawable/style_switch"
            android:text="UbicaciÃ³n"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/textColor_WithoutBg"
            android:textSize="20dp"
            app:thumbTintMode="add"
            app:splitTrack="false"
            app:trackTint="@color/black"
            app:track="@drawable/style_bg_switch"
            app:trackTintMode="add"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>